@model PSTFrame.MVC.Model.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/Content/login.css" rel="stylesheet" />
<script src="~/Scripts/Views/Home/Forget.js?@DateTime.Now.ToString("yyyyMMddhhmmss")" type="text/javascript"></script>

@Scripts.Render("~/bundles/jquery")
@Styles.Render("~/Content/sweetalert2Css")
@Scripts.Render("~/bundles/Common")
@Scripts.Render("~/bundles/sweetalert2Js")


<style>
</style>
<script type="text/javascript">

  var ForgetUrl='@Url.Action("Forget")'


</script>
@if (TempData["ErrMsg"] != null)
{
    <script type="text/javascript">
        var ErrMsg = @Html.Raw(Json.Encode(TempData["ErrMsg"]));
        window.onload = function () {
            swal.fire(
                ErrMsg
            )
        }
    </script>
}

<body>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "Form1", }))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <div id="login-box">
            <div class="title">
                <h1>
                    <img src="/images/LOGO2.png"
                         alt="logo" />
                </h1>

            </div>

            <div class="form">
                <h1>AI輔助清運車過磅查核系統</h1>
                <div class="item">
                    @*<i class="fa fa-github-alt" style="font-size:24px"></i>*@
                    @Html.LabelFor(x => x.AccountId):
                    @*@Html.TextBoxFor(x => x.AccountId, new { @class = "inputFormat" })*@
                    @Html.TextBox("AccountId", "PSTCOM", new { @class = "inputFormat" })
                    @Html.ValidationMessageFor(x => x.AccountId)
                </div>
                <div class="item">
                    @*<i class="fa fa-search" style="font-size:24px"></i>*@
                    @Html.LabelFor(x => x.Worpas):
                    @*@Html.PasswordFor(x => x.Worpas, new { @class = "inputFormat" })*@
                    @Html.TextBox("Worpas", "U89173703", new { @class = "inputFormat" })
                    @Html.ValidationMessageFor(x => x.Worpas)
                </div>

            </div>



            <input type="submit" id="btnLogin" class="Greenbutton" value="登入" />


            <input type="button" onclick="Sweet2forgetDialog('忘記密碼',ForgetUrl,700,600); " value="忘記密碼" class="Graybutton" />



        </div>



    }
</body>
