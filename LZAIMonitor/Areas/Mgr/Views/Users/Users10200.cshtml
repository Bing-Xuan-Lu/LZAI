@using LZAI.MgrLib.Model.DB

@model MgrUsers
@{
    ViewBag.Title = "修改密碼";
    Layout = "~/Views/Shared/_MgrLayout.cshtml";
}
@section scripts {
    <script src="~/Scripts/Views/Mgr/Users/Users10100.js?@DateTime.Now.ToString("yyyyMMddhhmmss")" type="text/javascript"></script>
    <script type="text/javascript">
        var Token = '@CommonRazorFunctions.GetAntiForgeryToken()';
        var UrlAlterPwd = '@Url.Action("AlterPwd")';
        var UrlDelete = '@Url.Action("Delete")';
        var UrlInsert = '@Url.Action("Users201A0")';
    </script>
}

<h2>修改密碼</h2>
<div>
    @using (Html.BeginForm("AlterPwd", "Users", FormMethod.Post, new { id = "AlterForm", @novalidate = "", autocomplete = "off", onsubmit = "return false;" }))
    {
        @Html.HiddenFor(x => x.UserId)
        <div class="form-group row">
            <div class="col-3">
                <span style="color: red;">*</span>
                <span>原始密碼</span>
            </div>
            <div class="col-9 pb-3">
                @Html.PasswordFor(x => x.OldPwd, new { @class = "form-control" })
            </div>
            <div class="col-3">
                <span style="color: red;">*</span>
                <span>新密碼</span>
            </div>
            <div class="col-9 pb-3">
                @Html.PasswordFor(x => x.NewPwd, new { @class = "form-control" })
            </div>
            <div class="col-3">
                <span style="color: red;">*</span>
                <span>再次輸入新密碼</span>
            </div>
            <div class="col-9 pb-3">
                @Html.PasswordFor(x => x.NewPwdCheck, new { @class = "form-control" })
            </div>
            <div class="col-12 text-center mt-3">
                <button onclick="Alter();" class="btn btn-success ml-3" style="background-image:none !important;">儲存</button>&nbsp;
                <button onclick="Clean();" class="btn btn-gray ml-3" style="background-image:none !important;">清除重填</button>
            </div>

        </div>
    }
</div>

