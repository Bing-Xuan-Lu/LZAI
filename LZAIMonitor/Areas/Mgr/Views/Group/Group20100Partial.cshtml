@using LZAI.MgrLib.Model.DB
@model MgrGroup

@section scripts {
}

<div class="hidden">
    @Html.HiddenFor(x => x.GroupId)
</div>

<div class="container">
    @Html.ValidationSummary(true)
    <div class="form-group row">
        <div class="col-2">
            <span style="color: red;">*</span>
            @Html.LabelFor(x => x.GroupName)
        </div>
        <div class="col-10">
            @Html.TextBoxFor(x => x.GroupName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.GroupName, "", new { @class = "help-block" })
        </div>
    </div>
</div>
