@using LZAI.Model.DB
@model CleWasteCar
<link href="~/Content/FormStyle.css" rel="stylesheet" />
@section scripts {
}

<div class="hidden">
    @Html.HiddenFor(x => x.SerNo)
</div>

<div class="container">
    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="row  pb-4">
            <div class="row align-items-center col-3">

                @Html.LabelFor(x => x.CarMachine)


            </div>
            <div class="col-9">
                @Html.RadioButtonFor(x => x.CarMachine, 1, new { @class = "option radio" })@Html.Label("頭車")
               
                    @Html.RadioButtonFor(x => x.CarMachine, 2, new { @class = "option radio" })@Html.Label("尾車")
                    @Html.RadioButtonFor(x => x.CarMachine, 3, new { @class = "option radio" })@Html.Label("未裝設")
                    @Html.ValidationMessageFor(x => x.CarMachine, "", new { @class = "text-danger" })
                </div>
            </div>
        <div class="row pb-4">
            <div class="row align-items-center col-3">
                @Html.LabelFor(x => x.Head_No)
            </div>
            <div class="col-9">
                @Html.TextBoxFor(x => x.Head_No, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Head_No, "", new { @class = "help-block" })
            </div>
        </div>
        <div class="row  pb-4">
            <div class="row align-items-center col-3">
                @Html.LabelFor(x => x.Plate_No)
            </div>
            <div class="col-9">
                @Html.TextBoxFor(x => x.Plate_No, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Plate_No, "", new { @class = "help-block" })

            </div>
        </div>
        <div class="row  pb-4">
            <div class="row align-items-center col-3">

                @Html.LabelFor(x => x.Fac_No)
            </div>
            <div class="col-9">
                @Html.TextBoxFor(x => x.Fac_No, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Fac_No, "", new { @class = "help-block" })

            </div>
        </div>
        <div class="row  pb-4">
            <div class="row align-items-center col-3">
                @Html.LabelFor(x => x.Fac_Name)
            </div>
            <div class="col-9">
                @Html.TextBoxFor(x => x.Fac_Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Fac_Name, "", new { @class = "help-block" })
            </div>
        </div>




        <div class="row  pb-4">
            <div class="row align-items-center col-3">


                @Html.LabelFor(x => x.CarModel)
            </div>
            <div class="col-9">
                @Html.DropDownListFor(x => x.CarModel, (IEnumerable<SelectListItem>)ViewBag.CarModel, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CarModel, "", new { @class = "text-danger" })

            </div>
        </div>


    </div>
</div>

